<?xml version="1.0" encoding="utf-8"?>
<DIYThemes>
    <ModelView
        name="scene_light_clock"
        color="1.0,1.0,1.0,1.0"
        lerp="0.05"
        originHeight="27.6"
        originWidth="92.8"
        originThickness="3"
        originX="screenWidth*0.78*0.5"
        originY="27.6/92.8*screenWidth*0.78*0.5"
        originZ="0"
        resource="data/g3d/clock.g3dj"
        scaleMode="height"
        scaleX="1.0"
        scaleY="1.0"
        environment="environment_03"
        scaleZ="1.0"
        width="screenWidth*0.78"
        height="27.6/92.8*screenWidth*0.78"
        thickness="3"
        x="screenWidth*0.11"
        y="screenHeight*0.68"
        z="0"
    >

        <TimeFace
            name="scene_clock_diffuse_face"
            bg="clock_d_,png,0,0,512,168,flipv=false,fliph=false,"
            dot="time_,png,211,39,73,64,flipv=false,fliph=false,"
            height="168"
            objectName="03 - Default"
            time1="time_,png,51,40,73,64,flipv=false,fliph=false,"
            time2="time_,png,131,40,73,64,flipv=false,fliph=false,"
            time3="time_,png,292,39,73,64,flipv=false,fliph=false,"
            time4="time_,png,372,40,73,64,flipv=false,fliph=false,"
            date="MM月dd日|MM/dd|#ffffff,left,100,110,112,25,flipv=false,fliph=false,"
            week="#ffffff,left,300,110,112,25,flipv=false,fliph=false,"
            width="512" />
        <!--有了NormalFace就有凹凸的感觉，和TimeFace 是配对的，当然，你可以没有TimeNormalFace-->
        <TimeNormalFace
            name="scene_clock_normal_face"
            bg="clock_n_,png,0,0,512,168,flipv=false,fliph=false,"
            dot="time_n_,png,211,39,73,64,flipv=false,fliph=false,"
            height="168"
            objectName="03 - Default"
            time1="time_n_,png,51,40,73,64,flipv=false,fliph=false,"
            time2="time_n_,png,131,40,73,64,flipv=false,fliph=false,"
            time3="time_n_,png,292,39,73,64,flipv=false,fliph=false,"
            time4="time_n_,png,372,40,73,64,flipv=false,fliph=false,"
            width="512" />

        <Animations>
            <CustomRotateAnimation
                name="scene_clock_3d_animation_1"
                rotateXScript="Math.sin(time)*5"
                rotateYScript="Math.cos(time)*5" />

            <RotateXYZAction
                name="scene_clock_animation_2"
                duration="0.2"
                rotateX="135.0"
                rotateY="135.0"
                rotateZ="0.0" />
            <RotateXYZAction
                name="scene_clock_animation_3"
                duration="0.2"
                rotateX="0.0"
                rotateY="0.0"
                rotateZ="0.0" />
            <Sequence
                name="scene_clock_animation_4"
                item="scene_clock_animation_2,scene_clock_animation_3" />
        </Animations>

        <Events>
            <Continue
                name="scene_clock_3d_evs_ctn_rte_xy"
                item="scene_clock_3d_animation_1"
                type="Animation" />
            <Click
                name="scene_clock_evs_clk_rte_xy"
                item="scene_clock_animation_4"
                type="Animation" />
        </Events>
    </ModelView>
</DIYThemes>